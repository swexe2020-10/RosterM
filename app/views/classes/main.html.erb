<h1>生徒管理画面</h1>


<% if current_teacher %>
    
    <%=link_to(top_logout_path ) do %>
        <button class="btn-secondary1" >ログアウト</button>
    <%end%>
<% else %>
    
    <%=link_to(top_login_form_path) do %>
        <button class="btn-secondary1" >ログイン</button>
    <%end%>
<% end %>

<hr>

<table border="1" >
  <thead>
    <tr>
      <th>学籍番号</th>
      <th>氏名</th>
      <th>ふりがな</th>
      <th>学年</th>
      <th>クラス</th>
      <th>担任</th>
      <th>メモ</th>
      <th colspan="3">編集</th>
    </tr>
  </thead>


 <tbody>

     <% @students.each do |e| %>
     <tr>
     <p>
          <td><%= e.students_id %></td>
          <td><%= e.name %></td>
          <td><%= e.name_furi %></td>
          <td><%= e.grade %></td>
          <td><%= e.course %></td>
          <th><%= e.tannin %></th>
          <td><%= simple_format(h e.message) %></td>
          
          
          <td colspan="3"><%= link_to '生徒情報変更', edit_student_path(e) %>
          <%= link_to '削除', student_path(e), method: :delete %></td>
     </p>
      </tr>
     <% end %>
 </tbody>
</table>


<hr>
<%=link_to("/students/new") do %>
    <button class="btn btn-secondary btn-lg" >追加</button>
<%end%>


